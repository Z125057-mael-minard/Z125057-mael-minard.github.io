:root {
  --background: #E6E5FE;
  --background-opacity: #C8C7DC99;
  --foreground: #392092;
  --light-background: #9578FF;
  --light-foreground: #E6E5FE;
  --accent: #6D45FF;
}
@font-face{
  font-family: "Alvinus Pixel";
  src: url("../fonts/AlvinusPixel-Regular.otf");
}

html, body{
  scroll-behavior: smooth;
  margin: 0rem;
  padding: 0rem;
}

.box{
  border-style: solid;
  border-width: 0.15rem;
  border-radius: 0.5rem;
  border-color: var(--foreground);
  margin-bottom: 2rem;
  font-family: "Pixelify Sans";
  font-weight: 400;
  .box-titlebar{
    text-align: left;
    border-color: var(--foreground);
    border-style: solid;
    border-width: 0.15rem;
    border-radius: 0.5rem;
    color: var(--light-foreground);
    background-color: var(--light-background);
    margin: -0.15rem;
    h1{
      font-weight: 400;
    }
  }
  .box-content{
    text-align: left;
    color: var(--foreground);
    p{
      margin-left: 0rem;
      margin-right: 0rem;
      margin-top: 0rem;
      margin-bottom: 0rem;
    }
    ul{
      padding: 0rem;
      margin: 0rem;
      list-style-image: url("../images/icons/nav-icon.png");
      list-style-position: inside;
      li{
        margin-bottom: 0.3rem;
      }
      .active{
        list-style-image: url("../images/icons/nav-icon-selected.png");
      }
    }
    a{
      color: var(--accent);
    }
    hr{
      margin-top:1em;
      margin-bottom:1em;
      color: var(--accent);
    }
  }
}

#bg{
  width: 100vw;
  height: 100vh;
  object-fit: cover;
  z-index: -1;
  pointer-events: none;
  position:fixed;
  box-sizing: border-box;
  background-image: linear-gradient(rgba(255, 255, 255, 0.4), rgba(255, 255, 255, 0.4)), url("../images/backgrounds/home-bg.jpg");
  background-size: cover;
  background-repeat: no-repeat;
}

#flex-container{
  display: flex;
}

#main-frame{
  background-color: var(--background-opacity);
  box-sizing: border-box;
  border-radius: 0.5rem;
  backdrop-filter: blur(0.4rem);
  box-shadow: 0.05em 0.1em 0.2em 0.03em rgba(0,0,0,0.5);
}

#side-boxes-container{
  position: sticky;
  top: 4em;
  padding: 1em;
  background-color: var(--background-opacity);
  border-radius: 0.5rem;
  backdrop-filter: blur(0.4rem);
  box-shadow: 0.05em 0.1em 0.2em 0.03em rgba(0,0,0,0.5);
  box-sizing: border-box;
  height: 100%;
  display: flex;
  flex-direction: column;
}

#side-header{
  top: 1rem;
  display: flex;
  height: 100%;
  flex-direction: column;
  #navigation-box{
    box-sizing: border-box;
  }
}
#side-footer{
  #contact-box{
    margin-bottom:0rem;
  }
}

#page-description-box-content{
  text-align: center;
}

#bigtext{
  font-family: "Alvinus Pixel";
  font-weight: 700;
  #bigtext-mael{
    margin: 0rem;
    color: var(--accent);
  }
  #bigtext-subtitle{
    margin: 0rem;
    color: var(--light-background);
  }
}

#introduction-box{
  margin-bottom: 2em;
  #introduction-box-content{
  }
  #intro-ascii{
    float: left;
    font-size: 0.6rem;
    font-family: "Inter";
    color: var(--accent);
  }
  #intro-fetchtext{
    color: var(--accent);
  }
  #intro-text{
  }
  .intro-command{
    font-family: "Pixelify Sans";
    font-weight: 600;
    color: var(--foreground);
  }
}

@media (max-width:599px){
  .box{
    min-width:4em;
    .box-titlebar{
      h1{
        font-size: 0.9rem;
        margin: 0rem;
        margin-left: 0.3rem;
      }
    }
    .box-content{
      padding-right:0.5rem;
      padding-left:0.5rem;
      padding-top:0.3rem;
      padding-bottom:0.3rem;
      font-size:0.7rem;
    }
  }
  #flex-container{
    padding: 1rem;
  }
  #main-frame{
    display: flex;
    flex-direction: column;
    width: 100%;
    padding: 1rem;
    padding-top: 7rem;
  }

  #side-boxes-container{
    display: none;

  }

  #bigtext{
    display: flex;
    flex-direction: column;
    font-size: 3.5rem;
    margin-bottom: 15rem;
    #bigtext-mael{
      margin-right:auto;
      margin-left:auto;
    }
    #bigtext-subtitle{
      margin-right:auto;
      margin-left:auto;
    }
  }

  #introduction-box{
    margin-top: 1.5rem;
    #introduction-box-content{
      display: flex;
      flex-direction: column;
      padding-top: 1rem;
      padding-bottom: 1em;
    }
    #intro-ascii{
      float: none;
      align-self: center;
      font-size: 0.6rem;
      margin-top: 0rem;
      margin-bottom: 0.3rem;
    }
    #intro-fetchtext{
      font-size:0.75rem;
      margin-bottom: 0rem;
      margin-top: 0.5rem;
      margin-bottom: 1.2rem;
    }
    #intro-text{
      font-size:0.85rem;
      margin-bottom: 0.5rem;
    }
    .intro-command{
      font-size: 1.2rem;
    }
  }
}

